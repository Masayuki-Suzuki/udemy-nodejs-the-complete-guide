{
    "name": "ts-node-boiler",
    "version": "1.0.0",
    "main": "dist/app.js",
    "author": "Masayuki-Suzuki <m.suzuki.fp@gmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node src/app.ts",
        "dev:watch": "nodemon --watch src --ext ts,js,pug,json --exec 'ts-node' src/app.ts",
        "clean": "rimraf dist/*",
        "tsc": "tsc",
        "build": "npm-run-all clean tsc",
        "start": "node .",
        "lint": "eslint --ext .js,.ts, .",
        "css": "tailwindcss build src/assets/styles/tailwind.css -o src/public/styles/style.css"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "pug": "^3.0.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.9",
        "@types/node": "14",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.11.0",
        "@typescript-eslint/parser": "^4.11.0",
        "autoprefixer": "^10.1.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^5.0.0",
        "husky": ">=4",
        "jest": "^26.6.3",
        "lint-staged": ">=10",
        "nodemon": "^2.0.6",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.1",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.0.2",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --cache",
        "*.ts": "tsc --noEmit --esModuleInterop",
        "*.{js,ts,json}": "prettier --write"
    }
}
