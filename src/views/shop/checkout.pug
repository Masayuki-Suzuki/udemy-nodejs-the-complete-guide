        //    input.hidden(type="hidden" value=totalPrice name="totalPrice")
        //    button.bg-indigo-800.text-white.font-bold.text-xl.rounded.px-8.py-3 Order

    script(src="https://js.stripe.com/v3/")
    script(src="/scripts/payment.js")
