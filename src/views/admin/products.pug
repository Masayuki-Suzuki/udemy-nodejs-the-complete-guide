extends ../partials/layout-admin

block content
    .container.mx-auto
        .flex.justify-end.mt-10
            a.px-4.py-3.bg-indigo-600.text-white.font-bold.rounded(href="/admin/add-product")
                | Add Product

    .container.mx-auto.shadow.overflow-hidden.bg-white.rounded.mt-10
        each product in products
            .item.flex.flex-wrap.w-full.border-r.border-solid.border-gray-200.p-8.items-center
                .image-holder.mr-4
                    img(
                        src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/mbp16touch-space-select-201911?wid=904&hei=840&fmt=jpeg&qlt=80&op_usm=0.5,0.5&.v=1572825197207"
                        width="64"
                    )
                h3.title.mr-4= product.title
                p.description.mr-4= product.description
                p.price $#{product.price}

